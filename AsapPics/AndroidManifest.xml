<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asappics"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permision.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="views.LoginView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="views.Album_View"
            android:label="@string/title_activity_album_view"
            android:theme="@style/AppTheme" />
        <activity
            android:name="views.SubscribeView"
            android:label="@string/title_subscribe"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="views.OneAlbumView"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="views.ShowPictureActivity"
            android:label="@string/title_activity_show_picture"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>